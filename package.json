{
  "name": "zarro",
  "version": "1.94.0",
  "description": "Some glue to make gulp easier, perhaps even zero- or close-to-zero-conf",
  "bin": {
    "zarro": "./index.js"
  },
  "homepage": "https://github.com/fluffynuts/zarro",
  "main": "index.js",
  "scripts": {
    "commit": "node commit-all.js",
    "push": "node push-all.js",
    "pretest": "run-s clean-cache build verify-submodules",
    "verify-submodules": "node index.js verify-submodules",
    "clean-cache": "rimraf .jest-cache",
    "test": "jest",
    "prestart": "run-s build",
    "start": "node index.js",
    "increment-package-version-beta": "cross-env VERSION_INCREMENT_STRATEGY=patch run-s \"start increment-package-json-version\"",
    "prerelease-beta": "run-s test increment-package-version-beta",
    "release-beta": "npm publish --tag beta",
    "prerelease": "run-s verify-up-to-date test",
    "release": "cross-env VERSION_INCREMENT_STRATEGY=minor run-s \"start release\"",
    "pull-gulp-tasks": "cd gulp-tasks && git checkout master && git pull --rebase",
    "pull-repo-root": "git pull --rebase",
    "pull": "run-s pull-gulp-tasks pull-repo-root",
    "build": "tsc",
    "gulp": "gulp",
    "test-npm-gulp-task": "echo \"this is a test\"",
    "verify-up-to-date": "run-s \"start -- verify-up-to-date\""
  },
  "dependencies": {
    "ansi-colors": "^4.1.1",
    "array.prototype.flatmap": "^1.2.4",
    "cross-env": "^7.0.3",
    "debug": "^4.3.1",
    "del": "^5.1.0",
    "event-stream": "^4.0.1",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "gulp-debug": "^4.0.0",
    "gulp-dotnet-cli": "^1.1.0",
    "gulp-edit-xml": "^3.1.1",
    "gulp-filter": "^6.0.0",
    "gulp-msbuild": "^0.9.0",
    "mkdirp": "^1.0.4",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "plugin-error": "^1.0.1",
    "readline": "^1.3.0",
    "request": "^2.88.2",
    "require-dir": "^1.2.0",
    "requirejs": "^2.3.6",
    "rimraf": "^3.0.2",
    "run-sequence": "^2.2.1",
    "sax": "^1.2.4",
    "simple-git": "^1.132.0",
    "temp": "^0.9.4",
    "through2": "^3.0.2",
    "undertaker-forward-reference": "^1.0.2",
    "vinyl": "^2.2.1",
    "which": "^2.0.2",
    "xml2js": "^0.4.23"
  },
  "files": [
    "gulp-tasks/**/*",
    "index-modules/**/*",
    "types.d.ts",
    "tsconfig.json"
  ],
  "author": {
    "name": "Davyd McColl",
    "url": "https://github.com/fluffynuts"
  },
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@types/event-stream": "^3.3.34",
    "@types/faker": "^5.1.6",
    "@types/fancy-log": "^1.3.1",
    "@types/gulp": "^4.0.8",
    "@types/jest": "^26.0.20",
    "@types/node": "^13.13.40",
    "@types/rimraf": "^3.0.0",
    "@types/xml2js": "^0.4.8",
    "@types/yargs": "^15.0.13",
    "debugger-is-attached": "^1.2.0",
    "expect-even-more-jest": "^1.11.0",
    "faker": "^4.1.0",
    "filesystem-sandbox": "^1.20.0",
    "jest": "^26.6.3",
    "proxyquire": "^2.1.3",
    "ts-jest": "^26.5.0",
    "typescript": "^3.9.7",
    "yargs": "^16.2.0"
  }
}